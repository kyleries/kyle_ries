:javascript
  $(document).ready(function() {  
    $('.iosSlider').iosSlider({
      scrollbar: true,
      snapToChildren: true,
      desktopClickDrag: true,
      scrollbarMargin: '5px 40px 0 40px',
      scrollbarBorderRadius: 0,
      scrollbarHeight: '2px',
      navPrevSelector: $('.prevButton'),
      navNextSelector: $('.nextButton')
    });
  });

